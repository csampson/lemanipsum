<!DOCTYPE html>
<html lang='en-US'>
<head>
  <meta charset='utf-8' />
  <meta name='description' content='Warhammer 40k lorem ipsum generator' />
  <title>Leman Ipsum</title>
  <!--[if lt IE 9]><script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script><![endif]-->
  <%= css :app %>
  <script src='//ajax.googleapis.com/ajax/libs/angularjs/1.0.7/angular.min.js'></script>
</head>
<body ng-app='LemanIpsum'>
  <header>
    <h1>Leman Ipsum</h1>
    <p>Warhammer 40k lorem ipsum generator</p>
  </header>

  <div ng-controller='Generator'>
    <textarea rows='12'>{{selection}}</textarea>

    <div class='generator-controls'>
      <label class='output-size'>
        Number of paragraphs
        <input ng-model='outputSize' ng-change='updateSelection()' type='number' min='1' max='{{paragraphs.length}}' />
      </label>

      <label class='output-format'>
        Format
        <span>
          <select ng-model='outputFormat' ng-change='updateSelection()' name='output-format'>
            <option value='text'>Plain text</option>
            <option value='html'>HTML</option>
          </select>
        </span>
      </label>

      <button class='randomize-output' type='button'>Randomize</button>
    </div>
  </div>

  <%= js :app %>
</body>
</html>
